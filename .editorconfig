root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
indent_size = 4

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[*.yaml]
indent_size = 2

[*.json]
indent_size = 2

[{.gitignore,.gitkeep,.editorconfig}]
indent_size = 2
